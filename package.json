{
  "name": "user-weather-monorepo",
  "version": "0.0.1",
  "description": "User Weather CRUD application with Node.js API and React frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "dev:e2e": "concurrently \"pnpm --filter api dev:e2e\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter shared build && pnpm --filter api build && pnpm --filter web build",
    "test:e2e": "start-server-and-test dev:e2e http://localhost:5173 \"pnpm --filter web-e2e test\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "start-server-and-test": "^2.0.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
