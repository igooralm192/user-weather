{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true
  },
  "paths": {
    "@shared/*": [
      "../shared/src/*"
    ],
    "@/*": [
      "src/*"
    ]
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": [
    "src"
  ]
}